@model IEnumerable<AutoExplore.Models.Car>

@{
    Layout = "_Layout";
}

<h1> My Vehicles </h1>


<p>
Below are your saved vehicles.
</p>


<a class="carSearchButton" asp-area="" asp-controller="myCars" asp-action="Add">Add New Vehicle</a>


<p>&nbsp;</p>
<p>&nbsp;</p>

<div>
    @foreach(var car in Model)
    {
        <article>
            <h1>
                @Html.ActionLink(car.year + " " + car.make + " " + car.model + " Details", "details", "myCars",
                    new { id = car.Id }, new { @class = "showVehicle" }
                )
            </h1>
            <div>

                @Html.ActionLink("Delete this Vehicle", "delete", "myCars",
                    new { id = car.Id }, new { @class = "showDetails" }
                )

                <p>&nbsp;</p>
            </div>


        </article>
    }
</div>

<style>
    * {
        box-sizing: border-box;
    }

    .carSearchButton {
        float: left;
        width: 20%;
        padding: 10px;
        background: #7289da;
        color: white;
        font-size: 17px;
        border: 1px solid grey;
        border-left: none;
        cursor: pointer;
    }

    .carSearchButton:hover {
        background: #0b7dda;
    }

    .showVehicle {
        text-decoration: none;
        font-family: 'Roboto', sans-serif;
        color: #0b7dda;
        padding-bottom: 50px;
    }

    a{
        text-decoration:none;
    }

    .showDetails {
        text-decoration: none;
        font-family: 'Roboto', sans-serif;
        color: white;
        background-color: darkslategray;
        border: 1px solid grey;
        border-left: none;
        cursor: pointer;
    }

    .showDetails:hover {
        background-color: darkgrey;
    }


    .carList {
        color: black;
        font-size: 17px;
        display: list-item;
        list-style-type: decimal;
        font-family: 'Roboto', sans-serif;
    }

    .deleteButton {
        color: white;
        background-color: crimson;
        font-size: 17px;
        display: inline-block;
        font-family: 'Roboto', sans-serif;
    }

    .showDetails,.deleteAllButton, .deleteButton, .carSearchButton {
        padding: .5rem 1rem;
        font-size: 1.5625rem;
        line-height: 1.5;
        border-radius: 1rem;
        font-family: 'Roboto', sans-serif;
    }

    .deleteAllButton {
        float: left;
        width: 20%;
        padding: 10px;
        background: crimson;
        color: white;
        font-size: 17px;
        border: 1px solid grey;
        border-left: none;
        cursor: pointer;
    }

</style>