@model AutoExplore.Models.Car
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    Layout = "_Layout";
}
<h1> Add A New Vehicle </h1>

<fieldset>

    <form asp-action="Add" asp-controller="myCars">

        <div asp-validation-summary="ModelOnly"></div>


        <p>
            <label class="labelEntry" asp-for="make"></label>
            <input class="entry" asp-for="make" placeholder="Make for vehicle" />
            <span asp-validation-for="make"></span>
        </p>

        <p>
            <label class="labelEntry" asp-for="model"></label>
            <input class="entry" asp-for="model" placeholder="Model for vehicle" />
            <span asp-validation-for="model"></span>
        </p>

        <p>
            <label class="labelEntry" asp-for="year"></label>
            <input class="entry" asp-for="year" placeholder="Year for vehicle" />
            <span asp-validation-for="year"></span>
        </p>

        <p>
            <button class="carSearchButton" type="submit">Add</button>
        </p>

    </form>
</fieldset>

<style>
    .carSearchButton {
        text-align: center;
        float: left;
        width: 100%;
        padding: 10px;
        background: #7289da;
        color: white;
        font-size: 17px;
        border: 1px solid grey;
        border-left: none;
        cursor: pointer;
        display: inline-block;
        padding: .5rem 1rem;
        padding-bottom: 25px;
        font-size: 1.5625rem;
        line-height: 1.5;
        border-radius: 1rem;
    }

    .field-validation-error{
        color: #cb202a;
        font-weight: bold;
        display: block;
        margin-left: 90px;
    }

    .input-validation-error{
        box-shadow: #cb202a 1px;

    }

    .validation-summary-errors{
        margin: 1em;
        color: #cb202a;
        font-weight: bold;
    }

    .entry {
        display: block;
        padding: 20px;
        align-content: center;
        width: 100%;
        border-radius: 4px;
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
    }

    .entry[type=text]:focus{
        border: 3px solid #555;
    }
    .labelEntry{
        font-family: 'Roboto', sans-serif;
        font-size: 24px;
    }
</style>